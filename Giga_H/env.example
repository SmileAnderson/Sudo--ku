# Server Configuration
HOST=0.0.0.0
PORT=8001

# Database Configuration
DATABASE_URL=sqlite:///./demo_scanner.db
# For production PostgreSQL, use: postgresql://postgres:password@localhost:5432/cyber_scanner

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security Configuration
ENCRYPTION_KEY=
SECRET_KEY=your-secret-key-here

# Rate Limiting Configuration
MAX_SCANS_PER_HOUR=10
MAX_CONCURRENT_SCANS=3
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Performance Configuration
MAX_WORKERS=4
WORKER_MEMORY_LIMIT=512
DEFAULT_SCAN_TIMEOUT=600

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=./logs

# Cost Efficiency Settings
RESOURCE_OPTIMIZATION=true
IDLE_WORKER_SHUTDOWN=300

# CVE Database Configuration
NVD_API_URL=https://services.nvd.nist.gov/rest/json/cves/2.0
CVE_CACHE_TTL=86400

# Network Configuration
SCAN_TIMEOUT=30
DNS_TIMEOUT=10
HTTP_TIMEOUT=30
